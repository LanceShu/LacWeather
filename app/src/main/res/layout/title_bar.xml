<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@drawable/splash_backgroud">

    <ImageView
        android:id="@+id/nav_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="9dp"
        android:layout_marginStart="8dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/title_back"/>

    <TextView
        android:id="@+id/title_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#fff"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/nav_weather_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:padding="2dp"
        android:layout_toEndOf="@id/title_city"
        android:layout_marginStart="2dp"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/nav_local"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:padding="2dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/local_w"
        android:layout_toEndOf="@id/nav_weather_icon"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/nav_add_care"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="9dp"
        android:layout_toStartOf="@id/title_city"
        android:layout_marginEnd="2dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/add_care"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/title_update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textColor="#fff"
        android:textSize="12sp"/>

    <ImageView
        android:id="@+id/nav_share"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:padding="7dp"
        android:layout_marginEnd="8dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/share"
        android:visibility="gone"/>

</RelativeLayout>
